$cart = $('#cart');
$notice = $('#notice');

$cart.html("<%= escape_javascript render @line_item.cart %>");

if ($('#cart .item_price').length == 0) {
  $cart.hide('blind', 1000);
  $notice.html('<%= escape_javascript render :text => ":::Line item '#{@line_item.product.title}' was successfully deleted from your Cart. Your Cart is now Empty." %>')
} else {
  <% if @line_item.quantity > 0 %>
    $notice.html('<%= escape_javascript render :text => ":::Line item '#{@line_item.product.title}' was successfully decremented." %>')
  <% else %>
    $notice.html('<%= escape_javascript render :text => ":::Line item '#{@line_item.product.title}' was successfully deleted from your Cart." %>')
  <% end %>
}

$notice.show('blind', 1000);


